@inherits LayoutComponentBase

<PageTitle>OpenEcologyApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>

        <article class="content px-4">
            @Body
        </article>
        
    </main>
    
</div>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: row;
        min-height: 100vh;
        background-color: var(--bg-light);
    }

    .sidebar {
        width: 250px;
        height: 100vh;
        position: sticky;
        top: 0;
        background-color: var(--nav-bg);
        box-shadow: var(--shadow-sm);
        z-index: 1000;
    }

    main {
        flex: 1;
        padding: 2rem;
        background-color: var(--bg-light);
    }

    .content {
        max-width: 1200px;
        margin: 0 auto;
    }


</style>
