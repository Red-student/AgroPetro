@page "/regional-stats"
@using OpenEcologyApp.Data
@using OpenEcologyApp.Services
@inject GrainHarvestService HarvestService

<PageTitle>Региональная статистика</PageTitle>

<div class="container">
    <h1 class="text-center mb-4">Региональная статистика урожая зерновых</h1>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Выберите область</h5>
                    <select class="form-select mb-3" @bind="selectedRegion">
                        <option value="">Все области</option>
                        @foreach (var region in regions)
                        {
                            <option value="@region">@region</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Статистика по выбранной области</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Год</th>
                                    <th>Урожайность (ц/га)</th>
                                    <th>Посевная площадь (тыс. га)</th>
                                    <th>Валовый сбор (тыс. тонн)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in filteredData)
                                {
                                    <tr>
                                        <td>@item.Year</td>
                                        <td>@item.Yield.ToString("F1")</td>
                                        <td>@item.SownArea.ToString("F0")</td>
                                        <td>@item.GrossHarvest.ToString("F0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<GrainHarvest> regionalData = new List<GrainHarvest>();
    private string selectedRegion = "";
    private List<string> regions = new List<string>();
    
    private IEnumerable<GrainHarvest> filteredData => 
        string.IsNullOrEmpty(selectedRegion) 
            ? regionalData 
            : regionalData.Where(x => x.Region == selectedRegion);
    
    protected override async Task OnInitializedAsync()
    {
        regionalData = await HarvestService.GetAllDataAsync();
        regions = await HarvestService.GetAllRegionsAsync();
    }
} 