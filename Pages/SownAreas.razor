@page "/sown-areas"
@using OpenEcologyApp.Data
@using OpenEcologyApp.Services
@inject GrainHarvestService HarvestService

<PageTitle>Посевные площади</PageTitle>

<div class="container">
    <h1 class="text-center mb-4">Динамика посевных площадей зерновых культур</h1>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <canvas id="sownAreaChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Таблица данных</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Год</th>
                                    <th>Посевная площадь (тыс. га)</th>
                                    <th>Урожайность (ц/га)</th>
                                    <th>Валовый сбор (тыс. тонн)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in sownAreaData)
                                {
                                    <tr>
                                        <td>@item.Year</td>
                                        <td>@item.SownArea.ToString("F0")</td>
                                        <td>@item.Yield.ToString("F1")</td>
                                        <td>@item.GrossHarvest.ToString("F0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<GrainHarvest> sownAreaData = new List<GrainHarvest>();
    
    protected override async Task OnInitializedAsync()
    {
        sownAreaData = await HarvestService.GetAllDataAsync();
    }
} 