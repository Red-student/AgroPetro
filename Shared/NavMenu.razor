@using Microsoft.AspNetCore.Components.Routing

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            
            <i class="fas fa-seedling me-2"></i>Мониторинг урожая
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="fas fa-home me-2"></i>Главная
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="grain-data">
                <i class="fas fa-database me-2"></i>Зерновые данные
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="yield-by-year">
                <i class="fas fa-chart-line me-2"></i>Отчеты
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="analytics">
                <i class="fas fa-chart-bar me-2"></i>Аналитика
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <i class="fas fa-info-circle me-2"></i>О нас
            </NavLink>
        </div>
    </nav>
</div>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
